<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/fb_event_item_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fb_event_item_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight="1"
            android:text="@string/fb_event_item_name_tv_holder"/>
        <TextView
            android:id="@+id/fb_event_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/fb_event_item_description_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fb_event_item_title_layout">
        <TextView
            android:id="@+id/fb_event_item_description_tv"
            android:paddingStart="10dp"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fb_event_item_description_tv_holder"
            android:textStyle="italic"/>
    </RelativeLayout>
</RelativeLayout>