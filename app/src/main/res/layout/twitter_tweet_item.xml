<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/twitter_tweet_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tw__composer_logo_blue"/>
        <TextView
            android:id="@+id/twitter_tweet_item_tweet_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/twitter_tweet_item_iv"
            android:text="@string/twitter_tweet_item_description_tv_holder"
            android:textStyle="italic"/>
    </RelativeLayout>
</RelativeLayout>